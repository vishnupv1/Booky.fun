<%- include('../user/newhead')%>

    <body>

        <section class="banner-area organic-breadcrumb">
            <div class="container">
                <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
                    <div class="col-first">
                        <h1>My Wallet</h1>
                        <nav class="d-flex align-items-center">
                            <a href="/home">Home<span class="fa fa-arrow-right"></span></a>
                            <a href="/wallet">My Wallet</a>
                        </nav>
                    </div>
                </div>
            </div>
        </section>
        <div class="container mt-3">
            <%if(coupon.length>0){%>
                <table class="table table-sm" style="color: rgb(0, 0, 0);">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Code</th>
                            <th scope="col">Offer</th>
                            <th scope="col">Minimum amount of purchase</th>
                            <th scope="col">Expiry date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%var k=1%>

                            <%for(let i=coupon.length-1;i>=0;i--){%>


                                <tr>
                                    <th scope="row">
                                        <%=k%>
                                    </th>
                                    <td>
                                        <%=coupon[i].code%>
                                    </td>
                                    <td>
                                        <%=coupon[i].description%>
                                    </td>
                                    <td>
                                        <%=coupon[i].minamount%>
                                    </td>
                                    <td>
                                        <%=date[i].date%>
                                    </td>
                                </tr>
                                <%k++%>

                                    <%}%>

                    </tbody>
                </table>
                <%}else{%>
                    <p>No coupons found</p>
                    <%}%>
        </div>
    </body>

	<!DOCTYPE html>
	<html lang="en" class="light-style layout-menu-fixed" dir="ltr" data-theme="theme-default"
		data-assets-path="/public/sneat/assets/" data-template="vertical-menu-template-free">

	<head>
		<meta charset="utf-8" />
		<meta name="viewport"
			content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
		<title>Books</title>
		<meta name="description" content="" />

		<div class="content-wrapper container">
			<!-- Content -->

			<div class="container-xxl flex-grow-1 container-p-y" style="margin-top: 9rem;">
				<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Adress Settings /</span> Address</h4>

				<div class="row">
					<div class="col-md-12">
						<ul class="nav nav-pills flex-column flex-md-row mb-3">
						</ul>
						<div class="card mb-4">
							<h5 class="card-header">Address(You can make changes and save)</h5>
							
							<!-- Account -->
							<div class="card-body">
								<div class="d-flex align-items-start align-items-sm-center gap-4">
									<img src="/public/userImages/<%=user.image%>" alt="user-avatar"
										class="d-block rounded" height="100" width="100" id="uploadedAvatar" />

								</div>
							</div>
							<hr class="my-0" />
							<div class="card-body">
								<form action="/addaddress" id="formAccountSettings" method="post">
									<div class="row">
										<div class="mb-3 col-md-6">
											<label for="type">Address type</label>
											<select class="form-control" id="adress_type" name="type"
												onchange="this.dispatchEvent(new CustomEvent('change'))">
												<option>
													Select type
												</option>
												<option>
													Home
												</option>
												<option>
													Work
												</option>
												<option>
													Personal
												</option>

											</select>
										</div>
										<div class="mb-3 col-md-6">
											<label for="street">Name</label>
											<input type="text" id="name" name="name" class="form-control"
												placeholder="Enter your name">
										</div>
										<div class="mb-3 col-md-6">
											<label for="street">Mobile</label>
											<input type="text" id="mobile" name="mobile" class="form-control"
												placeholder="Enter your mobile number">
										</div>
										<div class="mb-3 col-md-6">
											<label for="street">Street</label>
											<input type="text" id="street" name="street" class="form-control"
												placeholder="Enter your street name">
										</div>
										<div class="mb-3 col-md-6">
											<label for="landmark">Landmark</label>
											<input type="text" id="landmark" name="landmark" class="form-control"
												placeholder="Enter your landmark">
										</div>
										<div class="mb-3 col-md-6">
											<label for="address">Housename</label>
											<input type="text" id="address" name="address" class="form-control"
												placeholder="Enter your house/appartment name">
										</div>
										<div class="mb-3 col-md-6">
											<label for="state" class="form-label">City</label>
											<input type="text" id="city" name="city" class="form-control"
												placeholder="Enter your city">
										</div>
										<div class="mb-3 col-md-6">
											<label for="state" class="form-label">District</label>
											<input type="text" id="district" name="district" class="form-control"
												placeholder="Enter your district">
										</div>
										<div class="mb-3 col-md-6">
											<label for="state" class="form-label">State</label>
											<input type="text" id="state" name="state" class="form-control"
												value="Kerala" readonly>
										</div>

										<div class="mb-3 col-md-6">
											<label for="zipCode" class="form-label">Zip Code</label>
											<input type="text" id="zipcode" name="zipcode" class="form-control"
												placeholder="Enter your zipcode">
										</div>


										<div class="mt-2">
											<button type="submit" class="btn btn-warning me-2 ml-3">save</button>
										</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- /Account -->


			<!-- Footer -->

			<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

			<%- include('../user/footer')%>
				<script src="/public/js/vendor/jquery-2.2.4.min.js"></script>
				<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"
					integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
					crossorigin="anonymous"></script>
				<!-- <script src="/public/js/vendor/bootstrap.min.js"></script> -->
				<script src="/public/js/jquery.ajaxchimp.min.js"></script>
				<script src="/public/js/jquery.nice-select.min.js"></script>
				<script src="/public/js/jquery.sticky.js"></script>
				<script src="/public/js/nouislider.min.js"></script>
				<!-- <script src="/public/js/countdown.js"></script> -->
				<script src="/public/js/jquery.magnific-popup.min.js"></script>
				<script src="/public/js/owl.carousel.min.js"></script>
				<!--gmaps Js-->
				<!-- <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCjCGmQ0Uq4exrzdcL6rvxywDDOvfAu6eE"></script> -->
				<!-- <script src="/public/js/gmaps.min.js"></script> -->
				<script src="/public/js/main.js"></script>
				<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.3/dist/sweetalert2.all.min.js"></script>

				</body>

				<script>
					const home = JSON.parse(decodeURIComponent('<%= home %>'));
					const work = JSON.parse(decodeURIComponent('<%= work %>'));
					const personal = JSON.parse(decodeURIComponent('<%= personal %>'));

					const addressTypeSelect = document.getElementById('adress_type');
					const name = document.getElementById('name');
					const mobile = document.getElementById('mobile');
					const street = document.getElementById('street');
					const landmark = document.getElementById('landmark');
					const address = document.getElementById('address');
					const city = document.getElementById('city');
					const district = document.getElementById('district');
					const zipcode = document.getElementById('zipcode');
					const state = document.getElementById('state');

					addressTypeSelect.addEventListener('change', () => {
						console.log('dsdsds');
						const selectedAddresstype = addressTypeSelect.value;
						if (selectedAddresstype === 'Home') {
							name.value = home[0].name;
							mobile.value = home[0].mobile;
							street.value = home[0].street;
							landmark.value = home[0].landmark;
							city.value = home[0].city;
							district.value = home[0].district;
							address.value = home[0].address;
							zipcode.value = home[0].zipcode;
							state.value = home[0].state;
						}
						else if (selectedAddresstype === 'Work') {
							street.value = work[0].street;
							landmark.value = work[0].landmark;
							city.value = work[0].city;
							district.value = work[0].district;
							address.value = work[0].address;
							zipcode.value = work[0].zipcode;
							state.value = work[0].state;
							name.value = work[0].name;
							mobile.value = work[0].mobile;

						}
						else if (selectedAddresstype === 'Personal') {
							street.value = personal[0].street;
							landmark.value = personal[0].landmark;
							city.value = personal[0].city;
							district.value = personal[0].district;
							address.value = personal[0].address;
							zipcode.value = personal[0].zipcode;
							state.value = personal[0].state;
							name.value = personal[0].name;
							mobile.value = personal[0].mobile;

						}
						else {
							street.value = '';
							landmark.value = '';
							city.value = '';
							address.value = '';
							zipcode.value = '';
							state.value = '';
							district.value = '';
						}
					});

				</script>

	</html>
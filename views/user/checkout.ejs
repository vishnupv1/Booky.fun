        <script>
            const home = JSON.parse(decodeURIComponent('<%= home %>'));
            const work = JSON.parse(decodeURIComponent('<%= work %>'));
            const personal = JSON.parse(decodeURIComponent('<%= personal %>'));

            const addressTypeSelect = document.getElementById('address-type');
            const name = document.getElementById('uname');
            const mobile = document.getElementById('mobile');
            const street = document.getElementById('street');
            const landamrk = document.getElementById('landamrk');
            const address = document.getElementById('address');
            const city = document.getElementById('city');
            const zipcode = document.getElementById('zipcode');
            const state = document.getElementById('state');

            const namePlaceholder = document.getElementById('name-placeholder');
            const mobPlaceholder = document.getElementById('mob-placeholder');
            const streetPlaceholder = document.getElementById('street-placeholder');
            const cityPlaceholder = document.getElementById('city-placeholder');
            const AdPlaceholder = document.getElementById('ad-placeholder');
            const zipPlaceholder = document.getElementById('zip-placeholder');
            const statePlaceholder = document.getElementById('state-placeholder');

            // AdPlaceholder

            function hideStreetPlaceholder() {
                streetPlaceholder.hidden = true;
            }
            function hideCityPlaceholder() {
                cityPlaceholder.hidden = true;
            }
            function hideAdPlaceholder() {
                AdPlaceholder.hidden = true;
            }
            function hideZipPlaceholder() {
                zipPlaceholder.hidden = true;
            }
            function hideStatePlaceholder() {
                statePlaceholder.hidden = true;
            }
            function hideMobPlaceholder() {
                mobPlaceholder.hidden = true;
            }
            function hideNamePlaceholder() {
                namePlaceholder.hidden = true;
            }


            function showStreetPlaceholder() {
                streetPlaceholder.hidden = false;
            }
            function showCityPlaceholder() {
                cityPlaceholder.hidden = false;
            }
            function showAdPlaceholder() {
                AdPlaceholder.hidden = false;
            }
            function showZipPlaceholder() {
                zipPlaceholder.hidden = false;
            }
            function showStatePlaceholder() {
                statePlaceholder.hidden = false;
            }
            function showNamePlaceholder() {
                namePlaceholder.hidden = false;
            }
            function showMobPlaceholder() {
                mobPlaceholder.hidden = false;
            }

            addressTypeSelect.addEventListener('change', () => {
                const selectedAddresstype = addressTypeSelect.value;
                if (selectedAddresstype === 'home') {
                    street.value = home[0].street;
                    hideStreetPlaceholder();
                    landmark.value = home[0].landmark;
                    city.value = home[0].city;
                    hideCityPlaceholder();
                    address.value = home[0].address;
                    hideAdPlaceholder();
                    zipcode.value = home[0].zipcode;
                    hideZipPlaceholder();
                    state.value = home[0].state;
                    hideStatePlaceholder();
                    name.value = home[0].name;
                    hideNamePlaceholder();
                    mobile.value = home[0].mobile;
                    hideMobPlaceholder();
                }
                else if (selectedAddresstype === 'work') {
                    street.value = work[0].street;
                    hideStreetPlaceholder();
                    landmark.value = work[0].landmark;
                    city.value = work[0].city;
                    hideCityPlaceholder();
                    address.value = work[0].address;
                    hideAdPlaceholder();
                    zipcode.value = work[0].zipcode;
                    hideZipPlaceholder();
                    state.value = work[0].state;
                    hideStatePlaceholder();
                    name.value = work[0].name;
                    hideNamePlaceholder();
                    mobile.value = work[0].mobile;
                    hideMobPlaceholder();
                }
                else if (selectedAddresstype === 'personal') {
                    street.value = personal[0].street;
                    hideStreetPlaceholder();
                    landmark.value = personal[0].landmark;
                    city.value = personal[0].city;
                    hideCityPlaceholder();
                    address.value = personal[0].address;
                    hideAdPlaceholder();
                    zipcode.value = personal[0].zipcode;
                    hideZipPlaceholder();
                    state.value = personal[0].state;
                    hideStatePlaceholder();
                    name.value = personal[0].name;
                    hideNamePlaceholder();
                    mobile.value = personal[0].mobile;
                    hideMobPlaceholder();
                }
                else {
                    street.value = '';
                    showStreetPlaceholder();
                    landmark.value = '';
                    city.value = '';
                    showCityPlaceholder();
                    address.value = '';
                    showAdPlaceholder();
                    zipcode.value = '';
                    showZipPlaceholder();
                    state.value = '';
                    showStatePlaceholder();
                }
            });

        </script>
        <script>
            // Add an event listener to the form submission
            document.getElementById('form2').addEventListener('submit', function (event) {
                // Prevent the default form submission
                event.preventDefault();
                // Get the selected payment option
                var paymentType = document.querySelector('input[name="payment"]:checked').value;

                // Check the payment option and take appropriate action
                if (paymentType === 'cash') {
                    // Place the order directly
                    this.submit();
                } else if (paymentType === 'internet') {
                    // Redirect to PayPal page for payment
                    var formData = new FormData(this);
                    // Store the form data in the session or localStorage

                    sessionStorage.setItem('formData', JSON.stringify(Object.fromEntries(formData)));
                    window.location.href = '/paypal?price=<%= Gtotal %>'; // Replace with your PayPal payment URL
                }
            });
        </script>


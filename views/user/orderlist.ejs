            $(function () {
                $('#orderTable').DataTable({
                    "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
                    "pageLength": 5 // Set the default page length to 5;
                })
            });
        </script>

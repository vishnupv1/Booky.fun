<%- include('../admin/adminHeader')%>

    <!DOCTYPE html>
    <html>

    <head>
        <title>Users</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
        <script type="text/javascript" charset="utf8"
            src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <link rel="stylesheet" href="https://cdn.datatables.net/1.13.2/css/dataTables.bootstrap4.min.css">
        <style>
            .banner {

                color: rgb(217, 255, 0) !important;
            }

            div.dataTables_wrapper div.dataTables_filter input {
                padding: 10px !important;
                border: 1px solid #ccc !important;
                border-radius: 5px !important;
                font-size: 16px !important;
                box-shadow: 0 2px 5px rgba(1, 0, 0, 0.1) !important;
                width: 200px !important;
            }

            .dataTables_paginate {
                display: flex;
                justify-content: center;
                margin-top: 20px;
            }

            .paginate_button {
                display: inline-block;
                margin: 0 5px;
                padding: 8px 12px;
                border: 1px solid #ccc;
                border-radius: 5px;
                background-color: #f5f5f5;
                color: #333;
                font-size: 14px;
                text-decoration: none;
                cursor: pointer;
            }

            .paginate_button:hover {
                background-color: #e0e0e0;
            }

            .paginate_button.active {
                background-color: #333;
                color: #fff;
            }

            .paginate_button.disabled {
                cursor: not-allowed;
                opacity: 0.5;

            }

            @media (max-width: 576px) {
                .navbar-toggler {
                    order: 1;
                    margin-left: auto;
                }
            }

            @media (max-width: 1024px) {
                .navbar-toggler {
                    order: 1;
                    margin-left: auto;
                }
            }
        </style>
        <script type="text/javascript" charset="utf8"
            src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <link rel="stylesheet" href="https://cdn.datatables.net/1.13.2/css/dataTables.bootstrap4.min.css">
    </head>

    <body>
        <div style="margin-top: 75px;">
            <div class="d-flex justify-content-end m-3">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    Add Banner</button>
            </div>
            <div class="form-inline my-2 my-lg-0 d-flex justify-content-end container-fluid">
            </div>
            <div class="container-fluid">
                <% if (banner.length> 0) {%>

                    <table class="table table-hover" id="productsTable">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Banner</th>
                                <th scope="col">Image 1</th>
                                <th scope="col">Image 2</th>
                                <th scope="col">Image 3</th>
                                <th scope="col">Delete</th>

                            </tr>
                            <%let k=1%>
                                <%for (let i=banner.length - 1; i>= 0; i--) { %>
                        <tbody>
                            <tr>
                                <th scope="row">
                                    <%= k %>
                                </th>
                                <td>
                                    <%= banner[i].name %>
                                </td>
                                <td>
                                    <img src="/productImages/<%=banner[i].image[0] %>" alt="banner">
                                </td><td>
                                    <img src="/productImages/<%=banner[i].image[1] %>" alt="banner">
                                </td><td>
                                    <img src="/productImages/<%=banner[i].image[2] %>" alt="banner">
                                </td>

                                <td>
                                    <a><button class="btn btn-danger ublock"
                                            onclick="deleteBanner('<%= banner[i]._id %>')">Delete</button></a>
                                </td>

                            </tr>
                        </tbody>
                        <% k++ } %>
                            </thead>
                    </table>
                    <% }else { %>
                        <p>No Banners Found</p>
                        <% } %>

                            <p>
                            </p>

            </div>
        </div>

        <!-- Button trigger modal -->

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/admin/addBanner" method="post" enctype="multipart/form-data">
                            <div class="modal-body">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-sm my-2" id="name" name="name"
                                        placeholder="Banner Name">
                                </div>

                                <div class="form-group">
                                    <input type="file" class="form-control-file" id="image" name="image" multiple>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" onclick="function3()">Add</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>



    </body>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>

    <script>

        $(function () {
            $('#productsTable').DataTable();
        });
    </script>
    <script language="JavaScript">
        function function3() {
            Swal.fire({
                title: 'Success!',
                text: 'Banner added successfully!',
                icon: 'success',
                showConfirmButton: false, // Hide the "OK" button
            });
        }
    </script>
    <script>
        function function1(Id, code, offer) {
            var id = document.getElementById('id')
            var codes = document.getElementById('codes')
            var offers = document.getElementById('offers')
            id.value = Id
            codes.value = code
            offers.value = offer
        }
    </script>
    <script language="JavaScript">
        function function6() {
            Swal.fire({
                title: 'Success!',
                text: 'Coupon updated successfully!',
                icon: 'success',
                showConfirmButton: false, // Hide the "OK" button
            });
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>



    <script>

        $(function () {
            $('#productsTable').DataTable();
        });
        function deleteBanner(id) {
            Swal.fire({
                title: 'Are you sure to delete the coupon?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Deleted!',
                        'Coupon has been deleted.',
                        'success'
                    ).then(() => {
                        window.location.href = '/admin/deleteBanner?id=' + id;
                    });
                }
            });
        }
    </script>